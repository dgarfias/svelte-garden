{
  "name": "svelte-garden",
  "version": "0.1.0",
  "description": "Svelte 5 implementation of Zendesk Garden design system",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./theming": {
      "types": "./dist/theming/index.d.ts",
      "svelte": "./dist/theming/index.js",
      "default": "./dist/theming/index.js"
    },
    "./buttons": {
      "types": "./dist/buttons/index.d.ts",
      "svelte": "./dist/buttons/index.js",
      "default": "./dist/buttons/index.js"
    },
    "./ckeditor": {
      "types": "./dist/ckeditor/index.d.ts",
      "svelte": "./dist/ckeditor/index.js",
      "default": "./dist/ckeditor/index.js"
    },
    "./ckeditor/gardenIconsPlugin": {
      "default": "./dist/ckeditor/gardenIconsPlugin.js"
    },
    "./styles/*.css": "./dist/styles/*.css"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "build:site": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/prismjs": "^1.26.5",
    "eslint": "^9.0.0",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "components",
    "ui",
    "design-system",
    "garden",
    "zendesk"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dgarfias/svelte-garden"
  },
  "dependencies": {
    "ckeditor5": "^47.3.0",
    "prismjs": "^1.30.0"
  }
}
